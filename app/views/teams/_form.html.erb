<%= simple_form_for(@team) do |f| %>
    <%= f.association :division, 
                      as: :radio_buttons, 
                      label: false, 
                      label_method: 
                        lambda {
                          |division| "#{division.conference.conference_name} #{division.zone.zone_name}"
                        } %>
    <%= f.button :submit %>
<% end %>
